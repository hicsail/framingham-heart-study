<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>User Roles</h3>                
        <div class="card">
          <div style="padding: 20px">
            <table id="userTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>                  
                  <th>Name</th>
                  <th>Email</th>
                  {{#each roles}}
                    <th>{{this.name}}</th>
                  {{/each}}
                </tr>
              </thead>
              <tbody>
                {{#each usersList as |userRow|}}
                  <tr>                    
                    <td>{{userRow.name}}</td>
                    <td>{{userRow.email}}</td>                    

                    {{#each ../roles as |role|}}
                        <td>
                          <label>
                            <input class="roleCheck" type="radio"
                            name="role-for-{{userRow._id}}" 
                            value={{role.name}}
                            onchange="onCheckboxClicked(this, {{json userRow._id}})" 
                            {{#disableCB ../../user userRow role}}disabled{{/disableCB}} {{#userHasRole userRow name}}checked{{/userHasRole}}>
                          </label>
                        </td>
                    {{/each}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/public/scripts/users/roles.js"></script>
